<div class="container pt-3">
  <h1>Edit Cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :image %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%= link_to 'Back', cocktails_path %>
</div>
